@model CedFCIC.Entidades.UsuarioOlvidoClave;
@{
    ViewData["Title"] = "¿Olvidó su Contraseña?";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<form asp-action="OlvidoClave">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12">
                <label class="control-label">Para establecer una nueva Contraseña para su cuenta eFact, siga las siguientes instrucciones:</label>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">1) Ingrese Id.Usuario e Email (luego haga clic en el botón 'Solicitar Pregunta de seguridad').</label>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @* Verificar Usuario/Email y Solicitar Pregunta de seguridad *@
            <div class="form-group col-md-12">
                <input type="submit" id="botonSolPreg" name="botonSolPreg" value="Aceptar" class="btn btn-outline-primary" @ViewBag.Boton1ReadOnly />
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">2) Responda la Pregunta de Seguridad (luego haga clic en el botón 'Solicitar nuevo ingreso de Contraseña').</label>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label text-danger"> @ViewBag.Pregunta</label>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Respuesta" class="control-label"></label>
                <input asp-for="Respuesta" class="form-control" />
                <span asp-validation-for="Respuesta" class="text-danger"></span>
            </div>
            @* Solicitar Clave *@
            <div class="form-group col-md-12">
                <input type="submit" value="Aceptar" class="btn btn-outline-primary" @ViewBag.Boton2ReadOnly />
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">3) Ingrese su nueva contraseña y luego confirme la misma, (luego haga click en el botón 'Aceptar').</label>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="PasswordNueva" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="PasswordNueva" class="form-control" type="password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <div class="fa fa-eye-slash overout"></div>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="PasswordNueva" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="PasswordConfirmacion" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="PasswordConfirmacion" class="form-control" type="password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <div class="fa fa-eye-slash overout"></div>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="PasswordConfirmacion" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Aceptar" class="btn btn-outline-primary" @ViewBag.Boton3ReadOnly />
                <a asp-action="Ingresar" asp-controller="Usuario" class="btn btn-outline-primary">Volver</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("div.overout")
                .mouseover(function () {
                    $("#PasswordNueva").attr("type", "text");
                    $("#PasswordConfirmacion").attr("type", "text");
                })
                .mouseout(function () {
                    $("#PasswordNueva").attr("type", "password");
                    $("#PasswordConfirmacion").attr("type", "password");
                });
        });
    </script>

    <script>
        function RemoveAtrib() {
            var attr = $("#Password").attr("data-val-required");
            var hasAttr = false;

            if (typeof attr !== typeof undefined && attr !== false)
                hasAttr = true;

            if (hasAttr)
                $("#Password").removeAttr("data-val-required");
        };
        RemoveAtrib();

        function RemoveAtribPasswordNueva() {
            var attr = $("#PasswordNueva").attr("data-val-required");
            var hasAttr = false;

            if (typeof attr !== typeof undefined && attr !== false)
                hasAttr = true;

            if (hasAttr)
                $("#PasswordNueva").removeAttr("data-val-required");
        };
        RemoveAtribPasswordNueva();

        function RemoveAtribPasswordConfirmacion() {
            var attr = $("#PasswordConfirmacion").attr("data-val-required");
            var hasAttr = false;

            if (typeof attr !== typeof undefined && attr !== false)
                hasAttr = true;

            if (hasAttr)
                $("#PasswordConfirmacion").removeAttr("data-val-required");
        };
        RemoveAtribPasswordConfirmacion();

        $(document).ready(function () {
            var attr = $("#Password").attr("data-val-required");
            var hasAttr = false;

            if (typeof attr !== typeof undefined && attr !== false)
                hasAttr = true;

            if (hasAttr)
                $("#Password").removeAttr("data-val-required");
        });

        $("#botonSolPreg").click(function () {
            var attr = $("#Password").attr("data-val-required");
            var hasAttr = false;

            if (typeof attr !== typeof undefined && attr !== false)
                hasAttr = true;

            if (hasAttr)
                $("#Password").removeAttr("data-val-required");
        });
    </script>
}
