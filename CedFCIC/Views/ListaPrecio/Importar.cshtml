@model CedFCIC.Models.ListaPrecioModel;
@{
    ViewData["Title"] = "Importar listas de Precios";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<form enctype="multipart/form-data" asp-action="Importar" method="post">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="ListaPrecio.Cuit" class="control-label"></label>
                <input asp-for="ListaPrecio.Cuit" class="form-control" readonly="readonly" />
                <span asp-validation-for="ListaPrecio.Cuit" class="text-danger"></span>
            </div>
            <div class="col-lg-12 col-md-12">
                <label class="form-group">Selecione el archivo excel con las listas de precios. (usar archivos: .xls o .xlsx)</label>
            </div>
            <div class="col-lg-12 col-md-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1" style="background-color: white">Archivo Excel</span>
                    </div>
                    <div class="custom-file">
                        <label class="custom-file-label" for="inputGroupFile01"></label>
                        <input class="form-control custom-file-input" id="inputGroupFile01" onmouseover="this.style.cursor='pointer'" onmouseout="this.style.cursor='default'" type="file" name="file" asp-for="Archivo" />
                    </div>
                    <div class="input-group-append">
                        <input type="submit" value="Importar" class="btn btn-outline-primary">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="application/javascript">
        $('input[type="file"]').change(function(e){
            var fileName = e.target.files[0].name;
            $('.custom-file-label').html(fileName);
        });
    </script>
}
